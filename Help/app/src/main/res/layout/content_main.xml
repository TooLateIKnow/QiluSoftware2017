<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clickable="true" />

    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/OpenMail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:visibility="gone"
        android:layout_alignTop="@+id/OpenWeichat"
        android:layout_toLeftOf="@+id/OpenWeichat"
        android:layout_toStartOf="@+id/OpenWeichat"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/OpenPhone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/stat_sys_phone_call"
        android:visibility="invisible"
        app:backgroundTint="#2DA8F6"
        android:layout_above="@+id/OpenShortMessage"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/OpenShortMessage"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@drawable/ic_password"
        android:visibility="invisible"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_alignTop="@+id/OpenShare"
        android:layout_toLeftOf="@+id/OpenPhone"
        android:layout_toStartOf="@+id/OpenPhone" />

    <Button
        android:id="@+id/OpenShare"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@drawable/ic_share"
        android:visibility="invisible"
        android:layout_marginBottom="47dp"
        android:layout_marginRight="76dp"
        android:layout_marginEnd="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/School"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:background="@drawable/school"
        android:layout_above="@+id/Carmer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <Button
        android:id="@+id/Carmer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:background="@drawable/carmer"
        android:layout_below="@+id/Forest"
        android:layout_toRightOf="@+id/School"
        android:layout_toEndOf="@+id/School"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/Hospital"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:background="@drawable/hospital1"
        android:layout_alignBottom="@+id/Forest"
        android:layout_alignLeft="@+id/OpenShortMessage"
        android:layout_alignStart="@+id/OpenShortMessage"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/Station"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:background="@drawable/station"
        android:layout_above="@+id/School"
        android:layout_alignLeft="@+id/OpenPhone"
        android:layout_alignStart="@+id/OpenPhone" />

    <Button
        android:id="@+id/Forest"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:background="@drawable/forest1"
        android:layout_above="@+id/Market"
        android:layout_alignLeft="@+id/Market"
        android:layout_alignStart="@+id/Market"
        android:layout_marginBottom="27dp" />

    <Button
        android:id="@+id/Market"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:background="@drawable/market1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/OpenShare"
        android:layout_alignStart="@+id/OpenShare" />

</RelativeLayout>
